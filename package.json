{
  "name": "ai-legal-document-analyzer",
  "version": "1.0.0",
  "description": "AI-based legal document analyzer with NLP processing",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm install && npm run build",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": [
    "legal",
    "document",
    "analyzer",
    "ai",
    "nlp"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "compromise": "^14.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "mammoth": "^1.6.0",
    "multer": "^2.0.2",
    "natural": "^6.10.4",
    "pdf-parse": "^1.1.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
